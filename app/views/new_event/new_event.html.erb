<h1>New event</h1>
<%= form_for :new_event, url: new_event_path do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
    <br />
    <%= f.label :description %>
    <br />
    <%= f.text_area(:description, size: '50x10')%>
  </div>
  <%= f.submit %>
<% end %>
